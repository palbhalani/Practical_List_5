// Write a C++ program to demonstrate use of this pointer.

#include<iostream>
using namespace std;

class employee{
	
	public:
		int id;
		string name;
		int salary;
		employee(int id,string name,int salary)
			{
				this->id=id;
				this->name=name;
				this->salary=salary;	
			}
			void display()
			{
				   cout<<"My Name Is Bhalani Pal"<<endl;
    cout<<"En_no :: 220130318080 "<<endl;
				cout<<"Id Is ::"<<id<<endl;
				cout<<"Name Is ::"<<name<<endl;
				cout<<"Salary Is ::"<<salary<<endl;
			}
};
int main()
{
	employee e1(102,"Krinshsmith",100000);
	employee e2(104,"Rahul",50000);
	e1.display();
	e2.display();
	return 0;
}
